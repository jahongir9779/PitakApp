<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.novatec.pitak.ui.auth.AuthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PITAK"
        android:textColor="@color/colorAccent"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.pinball83.maskededittext.MaskedEditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/shape_rounded_corners_white"
        android:hint="@string/prompt_phone_number"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:maxLength="19"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mask="+998(**) ***-**-**"
        app:notMaskedSymbol="*" />
    <!--
        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="50dp"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    -->

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="server error"
        android:textColor="@color/error_red"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone" />


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/button_shape_orange_gradient_rounded"
        android:elevation="3dp"
        android:enabled="false"
        android:text="@string/authorize"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:finalCornerAngle="50dp"
        app:initialCornerAngle="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:spinning_bar_color="#fff" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:shadowRadius="10dp"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:shadowRadius="10dp"
            android:shadowDx="5dp"
            android:shadowDy="5dp"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"

            android:shadowRadius="5dp"
            android:shadowDx="2dp"
            android:shadowDy="2dp"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1" />

        <TextView
            android:id="@+id/tv0"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvGo"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="->"
            android:textColor="@color/white"
            android:textSize="30dp" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
