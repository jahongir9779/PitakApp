<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#fff"
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.2"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape_round"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/carNameAndNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Lacetti 01|XU941A"
                android:textColor="@color/dark_grey"
                app:layout_constraintStart_toEndOf="@id/profilePhoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tash. --> Xiva"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="@id/carNameAndNumber"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/carNameAndNumber"
                app:layout_constraintTop_toBottomOf="@id/carNameAndNumber"
                app:layout_constraintBottom_toTopOf="@id/ridesCount"/>

            <RatingBar
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:numStars="5"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/carNameAndNumber"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Price: 50,000 Sum"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/carNameAndNumber"
                app:layout_constraintTop_toTopOf="@id/direction" />

            <TextView
                android:id="@+id/ridesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rides completed: 88"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="@id/price"
                app:layout_constraintStart_toStartOf="@id/direction"
                app:layout_constraintTop_toBottomOf="@id/direction"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>