<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:elevation="3dp"
    app:elevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardParent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/carAction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_report_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/carAvatar"
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/carModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Nexia"
            app:layout_constraintStart_toEndOf="@id/carAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="01CAX046ss"
            app:layout_constraintStart_toEndOf="@id/carAvatar"
            app:layout_constraintTop_toBottomOf="@id/carModel" />

        <TextView
            android:id="@+id/carYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="1922"
            app:layout_constraintStart_toEndOf="@id/carAvatar"
            app:layout_constraintTop_toBottomOf="@id/plateNumber" />


        <TextView
            android:id="@+id/fuelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="PETROL"
            app:layout_constraintStart_toEndOf="@id/carAvatar"
            app:layout_constraintTop_toBottomOf="@id/carYear" />


        <CheckBox
            android:id="@+id/checkboxAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:clickable="false"
            android:text="AC"
            app:layout_constraintStart_toStartOf="@id/carAvatar"
            app:layout_constraintTop_toBottomOf="@id/carAvatar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>